# python bot
import token
import telebot
from telebot import types
import webbrowser
API_TOKEN = '7931479435:AAEJDqmudFFntut7RMkbLC6gzLaiplDeoPM' # token
bot = telebot.TeleBot("7931479435:AAEJDqmudFFntut7RMkbLC6gzLaiplDeoPM")
@bot.message_handler(commands=['site']) # command site for url github
def site(message):
    webbrowser.open_new_tab('https://github.com/KonZerDef?tab=overview&from=2024-10-01&to=2024-10-27')

@bot.message_handler(commands=['start']) # ccommand start, print Лёха
def start(message):
    bot.send_message(message.chat.id, "Лёха!")

@bot.message_handler()
def info(message):
    markup = types.InlineKeyboardMarkup()
    markup.add(types.InlineKeyboardMarkup)
    if message.text.lower() == "привет":
        bot.send_message(message.chat.id, "Здраствуйте пользователь!") # приветствует
    elif message.text.lower() == "id":
        bot.reply_to(message,f"ID: {message.from_user.id}")
    elif message.text.lower() == "botname":
        bot.reply_to(message, f"@MATERIAL_EGE_Bot")
    elif message.text.lower() == "разработчик бота":
        bot.reply_to(message, f"DeusExDeveloper") # ответ на сообщения

@bot.message_handler(content_types=['photo'])
def get_photo(message):
    markup = types.InlineKeyboardMarkup()
    button = types.InlineKeyboardButton("перейти на гит разраба" , url="https://github.com/KonZerDef?tab=overview&from=2024-10-01&to=2024-10-27")
    markup.add(button)  # Добавляем кнопку в разметку
    bot.send_message(message.chat.id, "Нажмите на кнопку:", reply_markup=markup) # отвечает на фото ссылкой на гит

bot.polling(non_stop=True)
